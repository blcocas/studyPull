html
  head
    title topic

  body
    h1
      a(href='/topic') Topic
    ol
      each val in list
        li
          a(href='/topic/' + val.id)= val.title

    form(action='/topic/add' method='post')
      p
        input(type='text' name='title' placeholder='title')
      p
        textarea(name='desc' placeholder='description')
      p
        input(type='text' name='author' placeholder='author')
      p
        input(type='submit')
